<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#37474F</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#263238</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#009688</item>

        <!-- With this, the CAB overlays the mp_toolbar -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:foreground">?android:windowContentOverlay</item>
        <item name="android:windowContentOverlay">@drawable/bottom_shadow</item>
    </style>

</resources>
